<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="8dp">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_main"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/main_card_margin_vertical"
        android:layout_marginEnd="4dp"
        android:layout_marginStart="@dimen/main_card_margin_horizontal"
        android:layout_marginTop="@dimen/main_card_margin_vertical"
        android:layout_weight="1"
        card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
        card_view:cardElevation="@dimen/drug_card_elevation">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--todo card text to come from a style not explicit-->
            <TextView
                android:id="@+id/tv_medicine_type"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_title_margin"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                android:text="Drug name"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:typeface="normal" />

            <TextView
                android:id="@+id/tv_amount_taken"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_title_margin"
                android:text="X/Y"
                android:textColor="@color/white"
                android:textSize="@dimen/drug_card_detail_font_size" />

            <LinearLayout
                android:id="@+id/ll_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_medicine_type"
                android:orientation="horizontal"
                android:paddingStart="12dp">

                <TextView
                    android:id="@+id/tv_next_dose_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Dummy"
                    android:paddingEnd="18dp"
                    android:textSize="@dimen/drug_card_detail_font_size" />

                <TextView
                    android:id="@+id/tv_next_dose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DUMMY"
                    android:textColor="@color/white"
                    android:textSize="@dimen/drug_card_detail_font_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_info"
                android:gravity="right"
                android:orientation="horizontal"
                android:padding="@dimen/card_button_margin">

                <ImageView
                    android:id="@+id/img_dose_now"
                    android:layout_width="@dimen/touch_target_width"
                    android:layout_height="@dimen/touch_target_height"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="6dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_done_white_24dp" />

                <ImageView
                    android:id="@+id/img_dose_choose"
                    android:layout_width="@dimen/touch_target_width"
                    android:layout_height="@dimen/touch_target_height"
                    android:padding="6dp"
                    android:layout_margin="8dp"
                    android:src="@drawable/ic_access_time_white_24dp" />

                <ImageView
                    android:id="@+id/img_drug_history"
                    android:layout_width="@dimen/touch_target_width"
                    android:layout_height="@dimen/touch_target_height"
                    android:padding="6dp"
                    android:layout_margin="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_format_list_bulleted_white_24dp" />

            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>