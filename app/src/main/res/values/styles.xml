<resources>
    <style name="Painkiller" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary_light</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/primary_text</item>
        <item name="android:windowBackground">@color/main_background</item>
    </style>

    <style name="PainkillerToolbarTheme" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorPrimary">@color/primary</item>
    </style>

    <style name="InputLabelTextView" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/inputLabelTextColor</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="PainkillerColouredButton" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/primary_text</item>
    </style>

</resources>
